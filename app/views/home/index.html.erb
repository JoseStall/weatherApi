<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<div  id="openweathermap-widget-9"></div>
		</div>
	</div>
	<br>
	<br>

	<%= form_tag(root_path, method: "get") do %>
	<div class="row">
		<div  class="form-group col-sm-6">
			<label>Pour voir la météo de n'importe quelle ville c'est ici</label>
			<%= text_field_tag 'address', nil, class: 'form-control form-control-lg', required: true, placeholder: 'rentre ici une adresse' %>
			<br>


			<%= submit_tag "Rechercher", class: "btn btn-primary btn-styled btn-block btn-lg" %>
			<% end %>
		</div>
		<div class="col-sm-6">
			<% if @meteo == 0 %>
			<strong><%= params[:address] %></strong> ne semble pas être une ville valide.
			<% elsif @meteo != nil %> 
			
			Actuellement dans la ville de <%= params[:address].downcase %>, la température est de <strong><%= @meteo.temperature.round(1) %> °C.</strong>
			<br>
			Au plus chaud de la journée il fera <strong><%=@meteo.max_temperature %> °C.</strong> <br>
			<% end %>
		</div>
	</div>
</div>



